	public XenoSoldierMinion(int client, float vecPos[3], float vecAng[3])
	{
		XenoSoldierMinion npc = view_as<XenoSoldierMinion>(CClotBody(vecPos, vecAng, "models/player/soldier.mdl", "0.65", "10"));
		
		int iActivity = npc.LookupActivity("ACT_MP_RUN_MELEE");
		if(iActivity > 0) npc.StartActivity(iActivity);
		
		
		i_NpcInternalId[npc.index] = XENO_SOLDIER_ZOMBIE_MINION;
		
		
		npc.m_iBleedType = BLEEDTYPE_NORMAL;
		npc.m_iStepNoiseType = STEPSOUND_NORMAL;	
		npc.m_iNpcStepVariation = STEPTYPE_NORMAL;		
		
		SDKHook(npc.index, SDKHook_OnTakeDamage, XenoSoldierMinion_ClotDamaged);
		SDKHook(npc.index, SDKHook_Think, XenoSoldierMinion_ClotThink);
		
		npc.m_flNextMeleeAttack = 0.0;
		
		
		
		//IDLE
		npc.m_flSpeed = 350.0;
		npc.m_iState = 0;
		npc.m_flGetClosestTargetTime = 0.0;
		PF_StartPathing(npc.index);
		npc.m_bPathing = true;
		
		SetEntityRenderMode(npc.index, RENDER_TRANSCOLOR);
		SetEntityRenderColor(npc.index, 150, 255, 150, 255);
		
		
		int skin = 5;
		SetEntProp(npc.index, Prop_Send, "m_nSkin", skin);
		
		npc.m_iWearable1 = npc.EquipItem("head", "models/player/items/soldier/soldier_zombie.mdl");
		SetVariantString("1.0");
		AcceptEntityInput(npc.m_iWearable1, "SetModelScale");
		
		npc.m_iWearable2 = npc.EquipItem("head", "models/workshop/weapons/c_models/c_picket/c_picket.mdl");
		SetVariantString("1.0");
		AcceptEntityInput(npc.m_iWearable2, "SetModelScale");
		
		return npc;
	}
	
	
}

